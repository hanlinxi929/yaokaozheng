page {
  background: #fff;
}
.login-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
}
.login-box .headerbj {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.login-box .login-ico {
  width: 300rpx;
  margin-bottom: 100rpx;
}
.login-box .login-btn {
  width: 100%;
}
.login-box .login-btn button {
  line-height: 98rpx;
  width: 600rpx;
  height: 98rpx;
  background: linear-gradient(135deg, #2D9BFB 0%, #44D9FF 100%);
  border-radius: 49rpx;
  color: white;
  font-size: 28rpx;
  text-align: center;
  margin: 0 auto;
}
.login-box .pop-box {
  padding: 40rpx 50rpx 60rpx;
}
.login-box .pop-box .pop-title {
  color: #101010;
  font-size: 32rpx;
}
.login-box .pop-box .remark {
  margin-top: 60rpx;
  color: black;
  font-size: 32rpx;
}
.login-box .pop-box .info-box {
  display: flex;
  align-items: center;
  margin-top: 38rpx;
  padding: 30rpx 0;
  border-top: 2rpx solid #cecece;
  border-bottom: 2rpx solid #cecece;
}
.login-box .pop-box .info-box button {
  background-color: none;
}
.login-box .pop-box .info-box image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}
.login-box .pop-box .info-box .info-text {
  display: flex;
  flex-direction: column;
}
.login-box .pop-box .info-box .info-text input {
  color: black;
  font-size: 28rpx;
}
.login-box .pop-box .info-box .info-text .text {
  margin-top: 6rpx;
  color: #9a9a9a;
  font-size: 24rpx;
}
.login-box .pop-box .pop-btn {
  display: flex;
  justify-content: space-between;
  padding: 60rpx 30rpx 0;
}
.login-box .pop-box .pop-btn button {
  width: 240rpx;
  height: 80rpx;
  line-height: 40rpx;
  border-radius: 12rpx;
  background-color: #f2f2f2;
  color: #07c160;
  font-size: 28rpx;
  text-align: center;
}
.login-box .pop-box .pop-btn .allow {
  background-color: #07c160;
  color: white;
}
.login-box .agreement-box {
  width: 100%;
  position: absolute;
  bottom: 100rpx;
  left: 0rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  display: inline-flex;
  justify-content: center;
}
.login-box .agreement-box image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}
.login-box .agreement-box .red {
  color: #2D9BFB;
}

