.scroll_box {
  position: relative;
  width: 250rpx;
  height: 3rpx;
  background: #CCCCCC;
  margin: 0 auto 37rpx;
}
.scroll_box .scroll_icon {
  /* 初始位置 */
  -webkit-transform: translateX(0px);
          transform: translateX(0px);
  width: 60rpx;
  height: 3rpx;
  background: #383838;
}
.tab_box {
  position: -webkit-sticky;
  position: sticky;
  z-index: 999;
  top: -1rpx;
  background: #fff;
  line-height: 80rpx;
  padding-bottom: 20rpx;
  white-space: nowrap;
}
.tab_box .tab_item {
  display: inline-block;
  position: relative;
  height: 100%;
  font-size: 34rpx;
  color: #303030;
}
.tab_box .tab_item:not(:last-child) {
  margin-right: 40rpx;
}
.tab_box .active {
  font-weight: 700;
  color: red;
}
.tab_box .active::after {
  position: absolute;
  left: 0;
  bottom: 0;
  content: '';
  width: 100%;
  height: 2rpx;
  background: red;
}

