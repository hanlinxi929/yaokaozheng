page {
  background-color: #e0e0e0 !important;
}
.container {
  width: 100%;
}
.container.bg {
  background-position: center top;
  background-size: 100% auto;
  background-repeat: no-repeat;
}
.info-box {
  padding: 20rpx 20rpx 40rpx;
}
.info-box .avatar {
  width: 109rpx;
  height: 109rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.info-box .name {
  margin-right: 30rpx;
  font-size: 32rpx;
  color: #333;
  margin-top: 15rpx;
}
.info-box .uname {
  white-space: nowrap;
  /* 防止文本换行 */
  overflow: hidden;
  /* 隐藏溢出内容 */
  text-overflow: ellipsis;
  /* 显示省略号 */
  max-width: 270rpx;
  display: block;
}
.info-box .mobile {
  font-size: 24rpx;
  color: #333;
  display: inline;
  line-height: 50rpx;
}
.info-box .spantext {
  background-color: #2D9DFB;
  border-radius: 15rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  height: 30rpx;
  padding: 0 10rpx;
  display: inline-block;
  margin-left: 10rpx;
}
.info-box .copy {
  width: 30rpx;
  height: 30rpx;
  margin: 4rpx 0 0 10rpx;
}
.info-box .item-mt {
  margin-top: 8rpx;
}
.options-wrapper {
  width: 96%;
  background: #fff;
  border-radius: 16rpx;
  margin: 0 auto 20rpx;
}
.options-wrapper .options-item {
  flex-direction: column;
  padding: 30rpx 0;
  width: 33.3%;
}
.options-wrapper .options-item .icon {
  width: 52rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
}
.options-wrapper .options-item .hint {
  font-size: 28rpx;
  color: #333;
}
.options-wrapper .info-item {
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 100rpx;
}
.options-wrapper .info-item .icon {
  width: 32rpx;
  margin-right: 12rpx;
}
.options-wrapper .info-item .icon.b {
  width: 50rpx;
  height: 50rpx;
}
.options-wrapper .info-item .cont {
  font-size: 28rpx;
  color: #333;
}
.options-wrapper .info-item .arrow {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.pop-code {
  width: 500rpx;
  flex-direction: column;
  position: relative;
}
.pop-code .close {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: inherit;
}
.pop-code .qrcode-box {
  width: 100%;
  flex-direction: column;
  background: #FFFFFF;
  margin-bottom: 50rpx;
  padding-bottom: 5px;
}
.pop-code .bg {
  width: 500rpx;
  height: 500rpx;
}
.pop-code .qrcode {
  margin-top: 5px;
  width: 80px;
  height: 80px;
}
.pop-code .btn {
  width: 60%;
  margin-left: 0;
}
.login-container {
  padding: 0 36rpx;
}
.login-container .wechatapp {
  padding: 80rpx 0 48rpx;
  border-bottom: 1rpx solid #e3e3e3;
  margin-bottom: 72rpx;
  text-align: center;
}
.login-container .wechatapp .header {
  width: 190rpx;
  height: 190rpx;
  border: 2px solid #fff;
  margin: 0rpx auto 0;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 1px 0px 5px rgba(50, 50, 50, 0.3);
}
.login-container .auth-title {
  color: #585858;
  font-size: 34rpx;
  margin-bottom: 40rpx;
}
.login-container .auth-subtitle {
  color: #888;
  margin-bottom: 88rpx;
  font-size: 28rpx;
}
.login-container .btn-group {
  padding: 0 20rpx;
}
.login-container .btn-group .btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  border: none;
  border-radius: 44rpx;
  box-shadow: 4rpx 4rpx 4rpx 0rpx rgba(0, 0, 0, 0.15);
  text-align: center;
}
.login-container .btn-group .btn::after {
  display: none;
}
.login-container .btn-group .btn-login {
  margin-bottom: 20rpx;
  background: #358BD8;
  color: #FFFFFF;
}
.login-container .btn-group .btn-quit {
  color: #358BD8;
  border: 1px solid #358BD8;
}
.txnav {
  padding: 25rpx;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 30rpx;
  padding: 10rpx;
  margin: 20rpx;
  width: 95%;
}
.txnav .txbt {
  font-size: 22rpx;
  color: #333333;
  line-height: 39rpx;
}
.txnav .txmon {
  font-weight: bold;
  font-size: 32rpx;
  color: #333333;
  padding-top: 15rpx;
}
.txnav .txbtn button {
  width: 120rpx;
  margin-top: 30rpx;
  height: 56rpx;
  font-size: 24rpx;
  background: #2D9DFB;
  box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(45, 157, 251, 0.2);
  border-radius: 28rpx;
  color: #fff;
  line-height: 56rpx;
}
.mymon {
  height: 350rpx;
  background: linear-gradient(45deg, #F4FAFF 0%, #D6EBF8 100%);
  border-radius: 24rpx;
  border: 2px solid #FFFFFF;
  width: 96%;
  margin: 0 auto 20rpx;
}
.mymon .mon-h {
  padding: 20rpx 30rpx 0;
  font-size: 28rpx;
  color: #333;
  margin: 10rpx 0 20rpx;
}
.mymon .monbt {
  padding: 0 30rpx;
  font-weight: 400;
  font-size: 24rpx;
  color: #333;
  line-height: 39rpx;
}
.mymon .monnav {
  padding: 0 30rpx;
}
.mymon .monnav .bluet {
  font-weight: bold;
  font-size: 46rpx;
  color: #2D9DFB;
  line-height: 72rpx;
}
.sign-pop {
  width: 400rpx;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 18rpx;
  flex-direction: column;
  position: relative;
}
.sign-pop .close {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  z-index: inherit;
}
.sign-pop .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  line-height: 44rpx;
}
.sign-pop .pop-btn {
  width: 100%;
  height: 60rpx;
  background: #358BD8;
  border-radius: 49rpx;
  font-size: 26rpx;
  color: #fff;
}
.txs {
  padding-top: 170rpx;
}
.hint {
  font-size: 28rpx;
  color: #333;
}
.xxsl {
  font-size: 18rpx;
  position: absolute;
  left: 50rpx;
  top: 0;
  display: block;
  background-color: red;
  color: #fff;
  padding: 3rpx;
  border-radius: 5rpx 6rpx;
}
.heightimgs {
  height: 50rpx;
  margin-bottom: 25rpx;
  position: relative;
}
.heightimgs image {
  height: 34rpx;
  width: 40rpx;
  margin: 0 20rpx;
}

